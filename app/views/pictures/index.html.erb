<p id="notice"><%= notice %></p>

<h1>Listing Pictures</h1>

<table>
  <thead>
    <tr>
      <th>Gallery</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pictures.each do |picture| %>
      <tr>
        <td><%= picture.gallery_id %></td>
        <td><%= picture.image %></td>
        <td><%= link_to 'Show', gallery_picture_path(@gallery ,picture) %></td>
        <td><%= link_to 'Edit', edit_gallery_picture_path(@gallery , picture) %></td>
        <td><%= link_to 'Destroy', gallery_picture_path(@gallery , picture), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Picture', new_gallery_picture_path(@gallery) %>
